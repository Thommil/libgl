/**
* 	Simplest shader with ambient light support (no texture) 
* 	
*	@author Thomas MILLET
**/

precision mediump float;

//Context
uniform mat4 u_mvpMatrixMat4;      		       

//Attributes
attribute vec4 a_PositionVec4;   				 				

void main()                                                 	
{
	gl_Position = u_mvpMatrixMat4 * a_PositionVec4;                       		  
}